{
  "manifest_version": 3,
  "name": "Shopopti+ Product Importer",
  "version": "1.0.0",
  "description": "Import products to your Shopify store with one click",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.aliexpress.com/*",
    "https://*.amazon.com/*",
    "https://*.myshopify.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
